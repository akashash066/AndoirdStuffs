<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/profile" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp"
            app:srcCompat="@drawable/menu" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_toEndOf="@+id/imageView5"
            app:srcCompat="@drawable/sk" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#E1DADA"
                android:backgroundTint="#E1DADA"
                android:ems="10"
                android:hint="Ask any thing about Sikkim"
                android:inputType="text"
                android:padding="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Recommended Places"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="44dp"
                    android:animateLayoutChanges="true"
                    android:autoStart="true"
                    android:clickable="true"
                    android:flipInterval="2500"

                    android:padding="0dp"
                    tools:layout_marginTop="0dp">

                    <FrameLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/deorali"
                        android:scaleType="centerCrop"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="35dp"
                            android:layout_gravity="left|bottom"
                            android:textColor="#FF9612"
                            android:gravity="center"
                            android:text="Deorali"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            />
                    </FrameLayout>


                    <FrameLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/yak"
                        android:scaleType="centerCrop"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="35dp"
                            android:layout_gravity="left|bottom"
                            android:textColor="#FF9612"
                            android:gravity="center"
                            android:text="Yak"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            />
                    </FrameLayout>


                    <FrameLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/mountain"
                        android:scaleType="centerCrop"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="35dp"
                            android:layout_gravity="left|bottom"
                            android:textColor="#FF9612"
                            android:gravity="center"
                            android:text="Mountain"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            />
                    </FrameLayout>
                </ViewFlipper>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Browse Tours"
                    android:textSize="18sp"
                    android:textStyle="bold" />
               <HorizontalScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginStart="0dp"
                   android:layout_marginTop="40dp"
                   android:layout_alignTop="@id/textView2"
                   android:animateLayoutChanges="true"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                   <FrameLayout
                       android:orientation="vertical"
                       android:layout_width="250dp"
                       android:layout_height="match_parent"
                       android:layout_marginRight="40dp"
                       >
                       <ImageView
                           android:id="@+id/imageView8"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           app:srcCompat="@drawable/mountain"
                           android:scaleType="centerCrop"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_margin="10dp"
                           android:layout_height="35dp"
                           android:layout_gravity="left|bottom"
                           android:textColor="#FF9612"
                           android:gravity="center"
                           android:text="Adventure"
                           android:textSize="25sp"
                           android:textStyle="bold"
                           />
                   </FrameLayout>

                   <FrameLayout
                       android:orientation="vertical"
                       android:layout_width="250dp"
                       android:layout_height="match_parent"
                       android:layout_marginRight="40dp">
                       <ImageView
                           android:id="@+id/imageView9"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           app:srcCompat="@drawable/deorali"
                           android:scaleType="centerCrop"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_margin="10dp"
                           android:layout_height="35dp"
                           android:layout_gravity="left|bottom"
                           android:textColor="#FF9612"
                           android:gravity="center"
                           android:text="RopeWay"
                           android:textSize="25sp"
                           android:textStyle="bold"
                           />
                   </FrameLayout>

                       <FrameLayout
                           android:layout_width="250dp"
                           android:layout_height="match_parent"
                           >
                           <ImageView
                               android:id="@+id/imageView10"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               app:srcCompat="@drawable/yak"
                               android:scaleType="centerCrop"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_margin="10dp"
                               android:layout_height="35dp"
                               android:layout_gravity="left|bottom"
                               android:textColor="#FF9612"
                               android:gravity="center"
                               android:text="Travel"
                               android:textSize="25sp"
                               android:textStyle="bold"
                               />
                       </FrameLayout>
                   </LinearLayout>
               </HorizontalScrollView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="10dp"
                    android:background="#535353"
                    android:backgroundTint="#DCDBDB"
                    android:id="@+id/cardview1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Create Your Own Tour"
                        android:textSize="16dp"
                        android:textStyle="bold"

                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="10dp"
                    android:background="#535353"
                    android:backgroundTint="#DCDBDB"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/cardview1"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Provide Feedback"
                        android:textSize="16dp"
                        android:textStyle="bold"

                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <TextView
                    android:id="@+id/Popular_Places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Popular Places "
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="40dp"
                    android:layout_alignTop="@id/Popular_Places"
                    android:animateLayoutChanges="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="40dp"
                            >
                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/mgmarg"
                                android:scaleType="centerCrop"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_height="35dp"
                                android:layout_gravity="left|bottom"
                                android:textColor="#FF9612"
                                android:gravity="center"
                                android:text="Mg Marg"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="40dp">
                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/zuluk"
                                android:scaleType="centerCrop"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_height="35dp"
                                android:layout_gravity="left|bottom"
                                android:textColor="#FF9612"
                                android:gravity="center"
                                android:text="Zuluk, East Sikkim"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/buddhapark"
                                android:scaleType="centerCrop"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_height="35dp"
                                android:layout_gravity="left|bottom"
                                android:textColor="#FF9612"
                                android:gravity="center"
                                android:text="Buddha Park, South Sikkim"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                />
                        </FrameLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="CopyRight Reserved By Akash Basnet"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>